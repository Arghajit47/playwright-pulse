{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src", // Changed from "src/reporter" to "src"
    "module": "commonjs", // Required for Node.js compatibility
    "target": "es2018", // Reasonably modern Node.js target
    "moduleResolution": "node", // Ensure Node.js resolution
    "declaration": true, // Generate .d.ts files
    "declarationDir": "dist", // Place .d.ts files alongside .js
    "emitDeclarationOnly": false,
    "noEmit": false, // Ensure files are emitted
    "isolatedModules": false,
    "jsx": "react", // Keep if needed, though reporter likely doesn't use JSX
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"] // Keep if reporter code uses this alias
    }
  },
  "include": ["src/reporter/**/*", "src/types/**/*", "src/lib/report-types.ts"], // Include reporter source and necessary types/libs
  "exclude": [
    "node_modules",
    // Exclude Next.js specific directories and files if they exist under src
    "src/app",
    "src/components",
    "src/ai",
    "src/hooks",
    "src/lib/data*.ts", // Exclude Next.js data fetching logic
    "src/lib/utils.ts" // Exclude client-side utils if not needed by reporter
  ]
}
